<%= content_for :page_title, 'Change Password' %>
<%= content_for :page_description, 'Reset a forgotten password' %>

<%= render 'layouts/navbar' %>

<section class="hero is-link">
  <div class="hero-body">
    <div class="container">
      <div class="columns is-vcentered">
        <div class="column">
          <h1 class="title is-size-1">Request Password Change</h1>
          <h3 class="subtitle is-size-3">Change forgotten password for <%= appname %></h3>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column is-three-fifths is-offset-one-fifth">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <label class="label">Email Address</label>
            <div class="control has-icons-left">
              <%= f.email_field :email, autofocus: true, class: "input", placeholder: "Enter your email address" %>
              <span class="icon is-small is-left"><i class="fa fa-envelope"></i></span>
            </div>
          </div>

          <div class="actions is-centered is-focus-padded">
            <%= f.submit "Send Reset Instructions", class: "button is-link is-success" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</section>

<%= render 'layouts/footer' %>
